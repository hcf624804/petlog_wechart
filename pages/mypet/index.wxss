.contain{
  width: 100%;
  height: 100%;
}
.content_panel_head{
  display: flex;
  flex-flow:row;
  position: relative;
  width: 90%;
  margin-left: 5%;
  border-radius: 20rpx;
  background: #D5496D;
  margin-top: 20rpx;
}
.head_left{
  text-align:left;
  width: 80%;
  display: flex;
}
.head_right{
  text-align:right;
  width: 20%;
  display: flex;
}
.headimage{
  margin-top:20rpx;
  margin-bottom: 20rpx;
  margin-left: 10rpx;
  width:100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}
.nickname{
  line-height: 60rpx;
  vertical-align:middle;
  margin-left: 15rpx;
  align-items: center;
  justify-content:center;
  display:flex;
}